                    <ul>
                        <li>
                            <strong><x:string id="option_toasts_toastemergence_sudden" /></strong>:
                            <x:string id="option_toasts_toastemergence_sudden_desc" />
                        </li>
                        <li>
                            <strong><x:string id="option_toasts_toastemergence_roll" /></strong>:
                            <x:string id="option_toasts_toastemergence_roll_desc" />
                        </li>
                        <li>
                            <strong><x:string id="option_toasts_toastemergence_fade" /></strong>:
                            <x:string id="option_toasts_toastemergence_fade_desc" />
                        </li>
                    </ul>
