<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet href="help.xsl" type="text/xsl"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:x="urn:x">
    <head>
        <title>
            Alarmz - <x:string id="page_options" />
        </title>
        <link href="style.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <div id="toc"></div>
        <div id="content">
            <h2>
                <x:string id="page_options" />
            </h2>
            <p>
                <x:string id="options" />
            </p>
            <x:optiongroup>
                <x:option id="language" />
                <x:option id="autosave" />
            </x:optiongroup>
            <x:optiongroup id="startup">
                <x:option id="runonsessionstartup" />
                <x:option id="openthisfileonstartup" />
            </x:optiongroup>
            <x:optiongroup id="toasts">
                <x:optiongroup id="colors">
                    <x:option id="background" />
                    <x:option id="gradient" />
                    <x:option id="text" />
                    <x:option id="toasts" />
